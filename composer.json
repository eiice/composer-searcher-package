{
    "name": "eicexxk/buscador-cursos",
    "description": "Projeto que busca os cursos no site da Alura",
    "type": "library",
    "authors": [
        {
            "name": "Thales Ferreira",
            "email": "thalesferr7@gmail.com"
        }
    ],
    "require": {
        "guzzlehttp/guzzle": "^7.5",
        "symfony/dom-crawler": "^4.2",
        "symfony/css-selector": "^5.4"
    },
    "autoload": {
      "classmap": ["./Teste.php"],
      "files": ["./functions.php"],
      "psr-4": {
        "Busca\\BuscadorDeCursos\\": "src/"
      }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.7",
        "phan/phan": "^5.4"
    },
    "scripts": {
      "cs": "phpcs --standard=PSR12 src/",
      "phan": "phan --allow-polyfill-parser src/Buscador.php",
      "check": [
        "@phan",
        "@cs"
      ],
      "post-update-cmd": [
        "@phan"
      ]
    },
    "scripts-descriptions": {
      "check": "Roda as verificações dos scripts PHAN, e PHPCS"
    }
}
